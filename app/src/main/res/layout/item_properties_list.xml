<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/property_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/property_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Price"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/property_photo"
        app:layout_constraintTop_toTopOf="@+id/property_photo" />

    <TextView
        android:id="@+id/property_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="property_city"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/property_price"
        app:layout_constraintTop_toBottomOf="@+id/property_price" />
</androidx.constraintlayout.widget.ConstraintLayout>